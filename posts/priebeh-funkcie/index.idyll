  [/td]
[/tr]
[tr]
  [td][/td]
  [td]
    [equation display:true]
      = \lim_{x \to ∞} e^{\frac{1}{x}}
    [/equation]
  [/td]
[/tr]
[tr]
  [td][/td]
  [td]
    [equation display:true]
      = 1
    [/equation]
  [/td]
[/tr]
[/tbody]
[/CustomTable]

